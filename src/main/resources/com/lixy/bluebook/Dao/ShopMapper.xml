<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lixy.bluebook.Dao.ShopMapper">

    <select id="getShopById" resultType="com.lixy.bluebook.Entity.Shop">
        select * from tb_shop where id = #{id}
    </select>
    <select id="getShopListByName" resultType="com.lixy.bluebook.Entity.Shop">
        select * from tb_shop
        <where>
            <if test="name != null and name != ''">
                name like '%${name}%'
            </if>
        </where>
    </select>
    <update id="updateShop" parameterType="shop">
        update tb_shop
        set
            name = #{name},
            type_id = #{typeId},
            images = #{images},
            area = #{area},
            address = #{address},
            x = #{x},
            y = #{y},
            avg_price = #{avgPrice},
            sold = #{sold},
            comments = #{comments},
            score = #{score},
            open_hours = #{openHours},
            update_time = #{updateTime}
        where id = #{id}
    </update>

</mapper>